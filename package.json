{
  "name": "django-auth-style",
  "private": true,
  "license": "Apache-2.0",
  "dependencies": {
    "daisyui": "^5.0.42",
    "remixicon": "^4.6.0",
    "tailwindcss": "^4.1.8"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.8",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.15.2",
    "rimraf": "^6.0.1",
    "rustywind": "^0.24.0"
  },
  "scripts": {
    "lint": "rustywind --check-formatted ./auth_style/templates",
    "format": "rustywind --write ./auth_style/templates",
    "watch": "parcel watch",
    "build:clean": "rimraf ./auth_style/static/auth_style/dist",
    "build:compile": "parcel build",
    "build": "npm-run-all build:clean build:compile"
  },
  "targets": {
    "styles": {
      "source": [
        "./npm-src/icons.css",
        "./npm-src/styles.pcss"
      ],
      "distDir": "./auth_style/static/auth_style/dist"
    }
  },
  "browserslist": "> 0.5%",
  "postcss": {
    "plugins": {
      "@tailwindcss/postcss": {}
    }
  }
}
